@model RegisterViewModel
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <form method="post">
        <label>Adınız</label>
        <input type="text" class="form-control" asp-for="Name"/>
        <br />
        <label>Soyadınız</label>
        <input type="text" class="form-control" asp-for="Surname" />
        <br /> 
        <label>Mail Adresiniz</label>
        <input type="text" class="form-control" asp-for="Mail" />
        <br /> 
        <label>Kullanıcı Adınız</label>
        <input type="text" class="form-control" asp-for="UserName" />
        <br />
        <label>Şifreniz</label>
        <input type="text" class="form-control" asp-for="Password" />
        <br /> 
        <label>Şifre Tekrar</label>
        <input type="text" class="form-control" asp-for="ConfirmPassword" />
       
        <br />
        <button class="btn btn-primary">Kaydet</button>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    </form>
</div>